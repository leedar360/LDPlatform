<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SupplierinfoMapper">
	
	<!--表名 -->
	<sql id="tableName">
		HR_SUPPLIERINFO
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		SUPPLIER_ID,	
		SUPPLIERNAME,	
		CONTACT,	
		PHONE,	
		EMAIL,	
		ADDRESS,	
		BANK,	
		BANKNO,	
		WEIXIN,	
		ZHIFUBAO,	
		REMARK,	
		CREATETIME,	
		SUPPLIERINFO_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{SUPPLIER_ID},	
		#{SUPPLIERNAME},	
		#{CONTACT},	
		#{PHONE},	
		#{EMAIL},	
		#{ADDRESS},	
		#{BANK},	
		#{BANKNO},	
		#{WEIXIN},	
		#{ZHIFUBAO},	
		#{REMARK},	
		#{CREATETIME},	
		#{SUPPLIERINFO_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			SUPPLIERINFO_ID = #{SUPPLIERINFO_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			SUPPLIER_ID = #{SUPPLIER_ID},
			SUPPLIERNAME = #{SUPPLIERNAME},
			CONTACT = #{CONTACT},
			PHONE = #{PHONE},
			EMAIL = #{EMAIL},
			ADDRESS = #{ADDRESS},
			BANK = #{BANK},
			BANKNO = #{BANKNO},
			WEIXIN = #{WEIXIN},
			ZHIFUBAO = #{ZHIFUBAO},
			REMARK = #{REMARK},
		SUPPLIERINFO_ID = SUPPLIERINFO_ID
		where 
		SUPPLIERINFO_ID = #{SUPPLIERINFO_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			SUPPLIERINFO_ID = #{SUPPLIERINFO_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1

		<if test="pd.SUPPLY_ID!= null and pd.SUPPLY_ID != ''"><!-- 关键词检索 -->
			and SUPPLIER_ID = #{SUPPLY_ID}
		</if>
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件-->
					SUPPLIERNAME LIKE '%'+ #{pd.keywords}+'%'
					 or
					CONTACT LIKE '%'+ #{pd.keywords}+'%'
					 or
					PHONE LIKE '%'+ #{pd.keywords}+'%'
					 or
					EMAIL LIKE '%'+ #{pd.keywords}+'%'
					 or
					ADDRESS LIKE '%'+ #{pd.keywords}+'%'
			)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>

	<!-- 列表(全部) -->
	<select id="distinctSupplyId" parameterType="pd" resultType="pd">
		select distinct SUPPLIER_ID,SUPPLIERNAME
		from
		<include refid="tableName"></include>
	</select>

	<!-- 获得最大supplyid 的值 -->
	<select id="getMaxsupplyid" parameterType="pd" resultType="pd">
		select max(SUPPLIER_ID) as maxSupplyid
		from
		<include refid="tableName"></include>

	</select>


</mapper>