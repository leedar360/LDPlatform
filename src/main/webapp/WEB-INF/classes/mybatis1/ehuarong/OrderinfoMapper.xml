<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="OrderinfoMapper">

	<!--表名 -->
	<sql id="tableName">
		HR_ORDERINFO
	</sql>

	<!-- 字段 -->
	<sql id="Field">
		ODER_ID,
		GOODNUM,
		SELLNAME,
		SELLPHONE,
		RECNAME,
		RECPHONE,
		RECADDRESS,
		EXPRESS,
		EXPRESSNO,
		SELLPRICE,
		SELLTOTALPRICE,
		PURCHASEPRICE,
		PURCHASETOTALPRICE,
		PLATFORMID,
		SUPPLIER_ID,
		SUPPLIERNAME,
		SUPPLIER_EMAIL,
		SUPPLYGOOD_NAME,
		CREATETIME,
		REMARK,
		EXTGOOD_ID,
		EXTGOODS_NAME,
		ORDERINFO_ID,
		STATUS
	</sql>

	<!-- 字段值 -->
	<sql id="FieldValue">
		#{ODER_ID},
		#{GOODNUM},
		#{SELLNAME},
		#{SELLPHONE},
		#{RECNAME},
		#{RECPHONE},
		#{RECADDRESS},
		#{EXPRESS},
		#{EXPRESSNO},
		#{SELLPRICE},
		#{SELLTOTALPRICE},
		#{PURCHASEPRICE},
		#{PURCHASETOTALPRICE},
		#{PLATFORMID},
		#{SUPPLIER_ID},
		#{SUPPLIERNAME},
		#{SUPPLIER_EMAIL},
		#{SUPPLYGOOD_NAME},
		#{CREATETIME},
		#{REMARK},
		#{EXTGOOD_ID},
		#{EXTGOODS_NAME},
		#{ORDERINFO_ID},
		#{STATUS}
	</sql>

	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into
		<include refid="tableName"></include>
		(
		<include refid="Field"></include>
		) values (
		<include refid="FieldValue"></include>
		)
	</insert>

	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
		ORDERINFO_ID = #{ORDERINFO_ID}
	</delete>

	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		ODER_ID = #{ODER_ID},
		GOODNUM = #{GOODNUM},
		SELLNAME = #{SELLNAME},
		SELLPHONE = #{SELLPHONE},
		RECNAME = #{RECNAME},
		RECPHONE = #{RECPHONE},
		RECADDRESS = #{RECADDRESS},
		EXPRESS = #{EXPRESS},
		EXPRESSNO = #{EXPRESSNO},
		SELLPRICE = #{SELLPRICE},
		SELLTOTALPRICE = #{SELLTOTALPRICE},
		PURCHASEPRICE = #{PURCHASEPRICE},
		PURCHASETOTALPRICE = #{PURCHASETOTALPRICE},
		PLATFORMID = #{PLATFORMID},
		SUPPLIER_ID = #{SUPPLIER_ID},
		SUPPLIER_EMAIL = #{SUPPLIER_EMAIL},
		SUPPLYGOOD_NAME = #{SUPPLYGOOD_NAME},
		REMARK = #{REMARK},
		EXTGOOD_ID = #{EXTGOOD_ID},
		EXTGOODS_NAME = #{EXTGOODS_NAME},
		ORDERINFO_ID = ORDERINFO_ID,
		STATUS = #{STATUS}
		where
		ORDERINFO_ID = #{ORDERINFO_ID}
	</update>

	<!-- 采购 -->
	<update id="purchase" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		PURCHASEPRICE = #{PURCHASEPRICE},
		SUPPLIER_ID = #{SUPPLIER_ID},
		SUPPLIERNAME = #{SUPPLIERNAME},
		SUPPLIER_EMAIL = #{SUPPLIER_EMAIL},
		SUPPLYGOOD_NAME = #{SUPPLYGOOD_NAME},
		PURCHASETOTALPRICE = #{PURCHASETOTALPRICE},
		STATUS = #{STATUS}
		where
		ORDERINFO_ID = #{ORDERINFO_ID}
	</update>

	<!-- 发货 -->
	<update id="consignment" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		STATUS = #{STATUS}

		where
		ORDERINFO_ID = #{ORDERINFO_ID}
	</update>

	<!-- 交付 -->
	<update id="delivery" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		STATUS = #{STATUS},
		EXPRESS= #{EXPRESS},
		EXPRESSNO = #{EXPRESSNO}

		where
		ORDERINFO_ID = #{ORDERINFO_ID}
	</update>

	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
		ORDERINFO_ID = #{ORDERINFO_ID}
	</select>

	<!-- 通过订单和商品ID获取数据 -->
	<select id="findByOrderIdAndGoodId" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
		ODER_ID = #{ODER_ID} and EXTGOOD_ID = #{EXTGOOD_ID}
	</select>

	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where 1=1 and status != 'bak'
		<if test="pd.EXTGOOD_ID!= null and pd.EXTGOOD_ID != ''"><!-- 关键词检索 -->
			and EXTGOOD_ID = #{pd.EXTGOOD_ID}
		</if>

		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
			(
			EXTGOODS_NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
			OR
			SUPPLYGOOD_NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
			<!--	根据需求自己加检索条件
                字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
                 or
                字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
            -->
			)
		</if>
	</select>

	<!-- 采购列表 -->
	<select id="purchaseDatalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where 1=1 and STATUS = 1
		<if test="pd.EXTGOOD_ID!= null and pd.EXTGOOD_ID != ''"><!-- 关键词检索 -->
			and EXTGOOD_ID = #{pd.EXTGOOD_ID}
		</if>

		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
			(
			<!--	根据需求自己加检索条件
                字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
                 or
                字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
            -->
			)
		</if>
	</select>

	<!-- 发货列表 -->
	<select id="deliveryList" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where 1=1 and STATUS = 2
		<if test="pd.EXTGOOD_ID!= null and pd.EXTGOOD_ID != ''"><!-- 关键词检索 -->
			and EXTGOOD_ID = #{pd.EXTGOOD_ID}
		</if>

		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
			(
			<!--	根据需求自己加检索条件
                字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
                 or
                字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
            -->
			)
		</if>
	</select>

	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
	</select>

	<!-- 采购管理列表 status =1-->
	<select id="listToPurchase" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where STATUS = 2 <!-- status = 1 订单导入完成， 新建订单 -->
	</select>

	<!-- 发货管理列表 status = 2 -->
	<select id="listToDelivery" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where STATUS = 3
	</select>

	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where
		ORDERINFO_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>

	<!-- 发货 物流单号 修改 -->
	<update id="deliveryedit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		EXPRESS = #{EXPRESS},
		EXPRESSNO = #{EXPRESSNO},
		REMARK = #{REMARK}
		where
		ORDERINFO_ID = #{ORDERINFO_ID}
	</update>

</mapper>