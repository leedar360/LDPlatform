<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SuplygoodinfoMapper">
	
	<!--表名 -->
	<sql id="tableName">
		HR_SUPLYGOODINFO
	</sql>

	<!--表名 -->
	<sql id="referenceTableName">
		HR_SUPPLIERINFO
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		SUPPLIER_ID,
		SUPPLIERNAME,
		GOOD_ID,	
		GOODNAME,	
		UNIT,	
		SPEC,	
		MEMO,	
		CATEGORYID,	
		REMARK,	
		CREATETIME,	
		SUPLYPRICE,	
		STARTTIME,	
		ENDTIME,	
		SUPLYGOODINFO_ID
	</sql>

	<!-- 字段 -->
	<sql id="MappingField">
		HR_SUPPLIERINFO.SUPPLIER_ID,
		HR_SUPPLIERINFO.SUPPLIERNAME,
		CONTACT,
		PHONE,
		EMAIL,
		ADDRESS,
		BANK,
		BANKNO,
		WEIXIN,
		ZHIFUBAO,
		SUPPLIERINFO_ID,
		GOOD_ID,
		GOODNAME,
		UNIT,
		SPEC,
		MEMO,
		CATEGORYID,
		HR_SUPLYGOODINFO.REMARK,
		HR_SUPLYGOODINFO.CREATETIME,
		SUPLYPRICE,
		STARTTIME,
		ENDTIME,
		SUPLYGOODINFO_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{SUPPLIER_ID},	
		#{SUPPLIERNAME},	
		#{GOOD_ID},	
		#{GOODNAME},	
		#{UNIT},	
		#{SPEC},	
		#{MEMO},	
		#{CATEGORYID},	
		#{REMARK},	
		#{CREATETIME},	
		#{SUPLYPRICE},	
		#{STARTTIME},	
		#{ENDTIME},	
		#{SUPLYGOODINFO_ID}
	</sql>

	<!-- 字段值 -->
	<sql id="MappingFieldValue">
		#{SUPPLIER_ID},
		#{SUPPLIERNAME},
		#{CONTACT},
		#{PHONE},
		#{EMAIL},
		#{ADDRESS},
		#{BANK},
		#{BANKNO},
		#{WEIXIN},
		#{ZHIFUBAO},
		#{REMARK},
		#{CREATETIME},
		#{SUPPLIERINFO_ID}
		#{GOOD_ID},
		#{GOODNAME},
		#{UNIT},
		#{SPEC},
		#{MEMO},
		#{CATEGORYID},
		#{REMARK},
		#{CREATETIME},
		#{SUPLYPRICE},
		#{STARTTIME},
		#{ENDTIME},
		#{SUPLYGOODINFO_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			SUPLYGOODINFO_ID = #{SUPLYGOODINFO_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			SUPPLIER_ID = #{SUPPLIER_ID},
			SUPPLIERNAME = #{SUPPLIERNAME},
			GOOD_ID = #{GOOD_ID},
			GOODNAME = #{GOODNAME},
			UNIT = #{UNIT},
			SPEC = #{SPEC},
			MEMO = #{MEMO},
			CATEGORYID = #{CATEGORYID},
			REMARK = #{REMARK},
			SUPLYPRICE = #{SUPLYPRICE},
			STARTTIME = #{STARTTIME},
			ENDTIME = #{ENDTIME},
		SUPLYGOODINFO_ID = SUPLYGOODINFO_ID
		where 
		SUPLYGOODINFO_ID = #{SUPLYGOODINFO_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="MappingField"></include>
		from 
		<include refid="tableName"></include>,
		<include refid="referenceTableName"></include>
		where
		 	SUPPLIER_ID = re.SUPPLIER_ID
			and SUPLYGOODINFO_ID = #{SUPLYGOODINFO_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="MappingField"></include>
		from 
		<include refid="tableName"></include>,
		<include refid="referenceTableName"></include>
		where 1=1 and SUPPLIER_ID = re.SUPPLIER_ID
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>

	<!-- 列表 -->
	<select id="datalistPageByGoodName" parameterType="page" resultType="pd">
		select
		<include refid="MappingField"></include>
		from
		<include refid="tableName"></include>,
		<include refid="referenceTableName"></include>
		where 1=1 and HR_SUPLYGOODINFO.SUPPLIER_ID = HR_SUPPLIERINFO.SUPPLIER_ID
		<if test="pd.GOODNAME!= null and pd.GOODNAME != ''"><!-- 关键词检索 -->
			and GOODNAME = #{pd.GOODNAME}
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="MappingField"></include>
		from 
		<include refid="tableName"></include>,
		<include refid="referenceTableName"></include>
		where SUPPLIER_ID = re.SUPPLIER_ID
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			SUPLYGOODINFO_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	

</mapper>